- title(t('wizard.title'))
#start-wizard
  = wizard(t('.wizard_title')) do
    #fuelux-wizard{"data-target" => "#step-container"}
      %ul.wizard-steps
        %li.active{"data-target" => "#step1"}
          %span.step 1
          %span.title= t('wizard.step_1')
        %li{"data-target" => "#step2"}
          %span.step 2
          %span.title= t('wizard.step_2')
        %li{"data-target" => "#step3"}
          %span.step 3
          %span.title= t('wizard.step_3')
        %li{"data-target" => "#step4"}
          %span.step 4
          %span.title= t('wizard.step_4')
    -#%hr
    = simple_form_for @premise, html: {class: 'form-horizontal'} do |f|
      #step-container.step-content.row-fluid.position-relative
        #step1.step-pane.active.row
          - info_alert do
            = icon('hand-o-right', t('.explanation'), class: 'hand-right-animated')
          - hr_double
          .row
            %h3.blue.lighter.col-xs-push-3.col-sm-push-3.col-md-push-3.col-lg-push-3.col-xs-5= t('.subtitle')
          .space-8
          = f.input :name, autofocus: true, input_html: { class: "col-xs-10 col-sm-5", "min-length" => 2, required: true }, :label_html => { :class =>'col-xs-3 no-padding-right'}, placeholder: t('phrases.name')
          = f.input :description, input_html: { class: "col-xs-10 col-sm-5"}, :label_html => { :class =>'col-xs-3 no-padding-right', required: false}, placeholder: t('phrases.description')


        #step2.step-pane.row
          - info_alert do
            = icon('hand-o-right', t('.step2_explanation'), class: 'hand-right-animated')
          - hr_double
          .row
            %h3.blue.lighter.col-xs-push-3.col-sm-push-3.col-md-push-3.col-lg-push-3.col-xs-5= t('.step2_subtitle')
          .space-8
          = f.simple_fields_for :place do |pf|
            = pf.input :name, autofocus: true, input_html: { class: "col-xs-10 col-sm-5", "min-length" => 2, required: true }, :label_html => { :class =>'col-xs-3 no-padding-right'}, placeholder: t('phrases.name')
            = pf.input :description, input_html: { class: "col-xs-10 col-sm-5"}, :label_html => { :class =>'col-xs-3 no-padding-right', required: false }, placeholder: t('phrases.description')


        #step3.step-pane.row
          - info_alert do
            = icon('hand-o-right', t('.explanation'), class: 'hand-right-animated')
          - hr_double
          .row
            %h3.blue.lighter.col-xs-push-3.col-sm-push-3.col-md-push-3.col-lg-push-3.col-xs-5= t('.step3_subtitle')
          .space-8
        #step4.step-pane.row
          .row
            %h3.blue.lighter.col-xs-push-3.col-sm-push-3.col-md-push-3.col-lg-push-3.col-xs-5= t('.subtitle')
            Your product is ready to ship! Click finish to continue!
          .space-8
    .wizard-actions.actions
      %button.btn.btn-prev{disabled: "disabled"}
        =icon('arrow-left', t('phrases.previous'), class:'fa-on-left')

      %button.btn.btn-success.btn-next
        =t('phrases.next')
        =icon('arrow-right', nil, class:'fa-on-right')

