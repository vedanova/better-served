.widget-main
  %h4.header.green.lighter.bigger
    =icon("group",nil, class: "blue")
    = t('registration.register')
  .space-6
  = devise_error_messages!
  %p= t('registration.enter_details')
  = simple_form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :role => "form" }) do |f|

    %fieldset
      %label.block.clearfix
        %span.block.input-icon.input-icon-right
          = f.input :username, autofocus: true, input_html: { class: 'form-control' }, label: false, placeholder: t('registration.username')
          =icon('user')
      %label.block.clearfix
        %span.block.input-icon.input-icon-right
          = f.simple_fields_for :organisation do |o|
            = o.input :name, input_html: { class: 'form-control' }, label: false, placeholder: t('registration.organization')
          =icon('building')
      %label.block.clearfix
        %span.block.input-icon.input-icon-right
          = f.input :email, input_html: { class: 'form-control' }, label: false, placeholder: t('registration.email')
          = icon('envelope')
      %label.block.clearfix
        %span.block.input-icon.input-icon-right
          = f.input :first_name, input_html: { class: 'form-control' }, label: false, placeholder: t('registration.first_name')
          = icon('user')
      %label.block.clearfix
        %span.block.input-icon.input-icon-right
          = f.input :last_name, input_html: { class: 'form-control' }, label: false, placeholder: t('registration.last_name')
          = icon('user')
      %label.block.clearfix
        %span.block.input-icon.input-icon-right
          = f.input :password, input_html: { class: 'form-control' }, label: false, placeholder: t('registration.password')
          = icon('lock')
      %label.block.clearfix
        %span.block.input-icon.input-icon-right
          = f.input :password, input_html: { class: 'form-control' }, label: false, placeholder: t('registration.password_confirmation')
          = icon('lock')
      .space
      .clearfix
      %button.width-35.pull-right.btn.btn-sm.btn-primary{type:"submit"}
        =icon('plus-circle')
        = t('navigation.items.sign_up')

.toolbar.clearfix
  %div
    = link_to new_confirmation_path(resource_name),class: 'forgot-password-link' do
      =icon('arrow-left')
      =t('registration.lost_confirmation_instructions')
  %div
    = link_to new_user_session_path, class: 'user-signup-link' do
      =t('sessions.login')
      =icon('arrow-right')





